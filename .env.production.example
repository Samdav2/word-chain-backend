# =============================================================================
# PRODUCTION ENVIRONMENT CONFIGURATION
# =============================================================================
# Copy this file to .env and configure for production deployment.
# IMPORTANT: Never commit production .env file to version control!
# =============================================================================

# Application Settings
APP_NAME="EdTech Word Chain API"
APP_VERSION="1.0.0"
DEBUG=false
ENVIRONMENT=production

# =============================================================================
# DATABASE CONFIGURATION (REQUIRED)
# =============================================================================
# PostgreSQL is REQUIRED for production deployments
# Format: postgresql+asyncpg://USERNAME:PASSWORD@HOST:PORT/DATABASE
DATABASE_URL=postgresql+asyncpg://wordchain_user:CHANGE_THIS_PASSWORD@localhost:5432/wordchain_prod

# Connection Pool Settings (tune based on expected concurrent users)
# Formula: pool_size + max_overflow = max concurrent connections
# For 100 concurrent users: pool_size=20, max_overflow=30
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=30
DB_POOL_TIMEOUT=30

# =============================================================================
# SECURITY (REQUIRED - DO NOT USE DEFAULTS!)
# =============================================================================
# Generate secure key: python -c "import secrets; print(secrets.token_urlsafe(64))"
# WARNING: Application will FAIL TO START with default key in production!
SECRET_KEY=GENERATE_AND_REPLACE_WITH_64_CHAR_RANDOM_STRING

ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Password Reset & Verification
PASSWORD_RESET_TOKEN_EXPIRE_MINUTES=60
EMAIL_VERIFICATION_TOKEN_EXPIRE_HOURS=24

# =============================================================================
# EMAIL SERVICE (REQUIRED for password reset & verification)
# =============================================================================
MAILJET_API_KEY=your_mailjet_api_key
MAILJET_API_SECRET=your_mailjet_api_secret
MAILJET_SENDER_EMAIL=noreply@yourdomain.com
MAILJET_SENDER_NAME="EdTech Word Chain"

# =============================================================================
# FRONTEND & CORS
# =============================================================================
FRONTEND_URL=https://yourdomain.com
CORS_ORIGINS=["https://yourdomain.com", "https://www.yourdomain.com"]

# =============================================================================
# CACHING (OPTIONAL but recommended)
# =============================================================================
REDIS_URL=redis://localhost:6379/0

# =============================================================================
# SERVER SETTINGS
# =============================================================================
# Workers formula: (2 * CPU_CORES) + 1
# Example: 4-core server = 9 workers
WORKERS=4
HOST=0.0.0.0
PORT=8000

# =============================================================================
# GAME SETTINGS
# =============================================================================
MIN_WORD_LENGTH=3
MAX_WORD_LENGTH=6
DEFAULT_GAME_MODE=STANDARD

# XP Settings
XP_PER_VALID_MOVE=10
XP_BONUS_COMPLETION=50
XP_PENALTY_HINT=5
