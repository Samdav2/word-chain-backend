# Application Settings
APP_NAME="EdTech Word Chain API"
APP_VERSION="1.0.0"
DEBUG=true
ENVIRONMENT=development  # development, staging, production

# Database Configuration
# =====================
# SQLite (Development) - Default
DATABASE_URL=sqlite+aiosqlite:///./data/wordchain.db

# PostgreSQL (Production) - Recommended for school deployment
# Uncomment and modify the line below for PostgreSQL:
# DATABASE_URL=postgresql+asyncpg://username:password@localhost:5432/wordchain_db

# Database Connection Pool Settings (PostgreSQL only)
# Optimized for game concurrency - adjust based on expected users
DB_POOL_SIZE=20             # Base persistent connections
DB_MAX_OVERFLOW=30          # Extra connections for peak load (total: 50)
DB_POOL_TIMEOUT=30          # Seconds to wait for connection

# Redis (for caching)
REDIS_URL=redis://localhost:6379/0

# JWT Authentication
# IMPORTANT: Generate a secure key for production with:
# python -c "import secrets; print(secrets.token_urlsafe(64))"
SECRET_KEY=your-super-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Password Reset & Email Verification
PASSWORD_RESET_TOKEN_EXPIRE_MINUTES=60
EMAIL_VERIFICATION_TOKEN_EXPIRE_HOURS=24

# Mailjet Email Settings (provide your credentials)
MAILJET_API_KEY=
MAILJET_API_SECRET=
MAILJET_SENDER_EMAIL=noreply@example.com
MAILJET_SENDER_NAME="EdTech Word Chain"

# Frontend URL (for email links)
FRONTEND_URL=https://wordchain-gamma.vercel.app

# CORS (comma-separated origins)
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8000", "https://wordchain-gamma.vercel.app"]

# Production Server Settings
WORKERS=4                   # Number of uvicorn workers (recommend: 2 * CPU cores + 1)
HOST=0.0.0.0
PORT=8000

# Game Settings
MIN_WORD_LENGTH=3
MAX_WORD_LENGTH=6
DEFAULT_GAME_MODE=STANDARD

# XP Settings
XP_PER_VALID_MOVE=10
XP_BONUS_COMPLETION=50
XP_PENALTY_HINT=5
